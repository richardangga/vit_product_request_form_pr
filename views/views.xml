<odoo>
    <data>
        <record id="inherit_button" model="ir.ui.view">    
            <field name="name">inherit_button</field>    
            <field name="model">vit.product.request</field>    
            <field name="inherit_id" ref="vit_product_request.view_product_request_form"/>    
            <field name="arch" type="xml">        
                <xpath expr="//sheet/group/group/field[@name='payment_term_id']" position="after">
                    <field name="description" string="Description"/>
                </xpath>
                <xpath expr="//sheet/group/group/field[@name='user_id']" position="after">
                    <field name="requesto_id" string="Request To" context="{'group_by':'user_id'}"/>
                </xpath>   
                <xpath expr="//button[@name='action_check_budget']" position="replace">
                    <button string="Confirm" name="action_confirm" attrs="{'invisible':['|',('budget','=',False),('state','!=','draft')]}" type="object" class="oe_highlight" groups="vit_budget.group_budget_manager_department"/>
                    <button string="Check Budget" type="object" name="action_confirm" 
                            class="oe_highlight"
                            attrs="{'invisible':['|',('state','!=','draft')]}"/>
                </xpath>
                <!-- <button name="action_create_po" position="after">
                    <button name="action_create_po"
                    string="Create RfQ"
                    states="open" groups="purchase.group_purchase_manager"
                    type="object" invisible="1"/>
                </button> -->  
                <xpath expr="//form/header/button[@name='action_confirm']" position="before">
                    <button string="Request Approval" type="object" name="action_confirm_request" states="open" groups="purchase.group_purchase_manager"/>
                </xpath>
                <xpath expr="//form/header/button[@name='action_draft']" position="after">       
                    <button string="Create Review" type="object" name="action_onprogress" states="onprogress" groups="purchase.group_purchase_manager"/>
                    <button string="Create Budget Confirmation" type="object" name="action_reviewed" states="reviewed" groups="purchase.group_purchase_manager"/>
                    <button string="Create Approval" type="object" name="action_budgetconfirm" states="budgetconfirm" groups="purchase.group_purchase_manager"/>
                    <button string="Print PR" type="object" name="action_approved" states="approved" groups="purchase.group_purchase_manager"/>      
                </xpath>
                <xpath expr="//form/header/field[@name='state']" position="replace">
                    <field name="state" widget="statusbar" statusbar_visible="draft,open,onprogress,reviewed,budgetconfirm,approved,done"/>
                </xpath>
                <xpath expr="//form/sheet/notebook/page" position="after">
                    <page string="Approval Level">
                        <group>
                            <field name="reviewed_by" context="{'group_by':'user_id'}" options="{'no_create':True,'no_open':True}"/>
                            <field name="budgeted_by" context="{'group_by':'user_id'}" options="{'no_create':True,'no_open':True}"/>       
                            <field name="approved_by" context="{'group_by':'user_id'}" options="{'no_create':True,'no_open':True}"/>       
                        </group>    
                    </page>
                </xpath>
                <field name="company_id" position="replace">
                    <field name="company_id" invisible="1"/>
                </field>
                <field name="date" position="before">
                    <field name="company_id"/>
                </field>
                <field name="department_id" position="replace">
                    <field name="department_id" options="{'no_create':True,'no_open':True}" invisible="1"/>
                </field>
                <field name="category_id" position="before">
                    <field name="department_id" options="{'no_create':True,'no_open':True}" string="Unit"/>
                </field>
                <!-- <field name="business_id" position="replace">
                    <field name="bisnis"/>
                </field>
                <field name="location_id" position="replace">
                    <field name="analytic_tag_ids"/>
                </field> -->
                <field name="partner_id" position="replace">
                    <field name="partner_id" invisible="1"/>
                </field>
                <!-- <xpath expr="//notebook/page/field[@name='product_request_line_ids']/tree/field[@name='product_id']" position="replace">
                    <field name="product_id" domain="[('categ_id','=',parent.category_id),('analytic_id','=',parent.analytic_account_id)]" options="{'no_create':True,'no_open':True}" required="1"/>
                </xpath> -->
                <!-- <field name="category_id" position="replace">
                    <field name="category_id" options="{'no_create':True,'no_open':True}" invisible="1"/>
                </field> -->
                <!-- <field name="warehouse_id" position="replace">
                    <field name="warehouse_id" options="{'no_create':True,'no_open':True}" invisible="1"/>
                </field> -->
            </field>
        </record>
        <!-- <record id="inherit_line_form" model="ir.ui.view">    
            <field name="name">inherit_line_form</field>    
            <field name="model">vit.product.request.line</field>    
            <field name="inherit_id" ref="vit_product_request.view_product_request_line_form"/>    
            <field name="arch" type="xml">   
                <xpath expr="//form/sheet/group/group[2]/field[@name='product_qty_hand']" position="replace">
                    <field name="analytic_account_id"/>
                </xpath>
                <xpath expr="//form/sheet/group/group[2]/field[@name='product_qty_forecast']" position="replace">
                    <field name="product_qty_forecast" invisible="1"/>
                </xpath>
            </field>
        </record> -->
        
    </data>
</odoo>