<odoo>
    <data>
        <record id="inherit_button" model="ir.ui.view">    
            <field name="name">inherit_button</field>    
            <field name="model">vit.product.request</field>    
            <field name="inherit_id" ref="vit_product_request.view_product_request_form"/>    
            <field name="arch" type="xml">        
                <xpath expr="//sheet/group/group/field[@name='payment_term_id']" position="after">
                    <field name="description" string="Description"/>
                </xpath>
                <xpath expr="//sheet/group/group/field[@name='user_id']" position="after">
                    <field name="requesto_id" string="Request To" context="{'group_by':'user_id'}"/>
                </xpath>   
                <xpath expr="//button[@name='action_check_budget']" position="replace">
                    <button string="Confirm" name="action_confirm" attrs="{'invisible':['|',('budget','=',False),('state','!=','draft')]}" type="object" class="oe_highlight" groups="vit_budget.group_budget_manager_department"/>
                    <button string="Check Budget" type="object" name="action_confirm" 
                            class="oe_highlight"
                            attrs="{'invisible':['|',('state','!=','draft')]}"/>
                </xpath>
                <xpath expr="//button[@name='action_create_pr']" position="replace">            
                    <button string="Create Bid" type="object" name="action_create_pr_baru"
						 	states="open" groups="purchase.group_purchase_manager"/>      
                </xpath>
                <xpath expr="//form/header/field[@name='state']" position="replace">
                    <field name="state" widget="statusbar" statusbar_visible="draft,open,onprogress,reviewed,budgetconfirm,approved,done"/>
                </xpath>
                <xpath expr="//form/sheet/notebook/page" position="after">
                    <page string="Approval Level">
                        <group>
                            <field name="reviewed_by" context="{'group_by':'user_id'}" options="{'no_create':True,'no_open':True}"/>
                            <field name="budgeted_by" context="{'group_by':'user_id'}" options="{'no_create':True,'no_open':True}"/>       
                            <field name="approved_by" context="{'group_by':'user_id'}" options="{'no_create':True,'no_open':True}"/>       
                        </group>    
                    </page>
                </xpath>
                <field name="company_id" position="replace">
                    <field name="company_id" invisible="1"/>
                </field>
                <field name="date" position="before">
                    <field name="company_id"/>
                </field>
                <field name="department_id" position="replace">
                    <field name="department_id" options="{'no_create':True,'no_open':True}" invisible="1"/>
                </field>
                <field name="category_id" position="before">
                    <field name="department_id" options="{'no_create':True,'no_open':True}" string="Unit"/>
                </field>
                <!-- <field name="category_id" position="replace">
                    <field name="category_id" options="{'no_create':True,'no_open':True}" invisible="1"/>
                </field> -->
                <!-- <field name="warehouse_id" position="replace">
                    <field name="warehouse_id" options="{'no_create':True,'no_open':True}" invisible="1"/>
                </field> -->
                <field name="business_id" position="replace">
                    <field name="business_id" invisible="1"/>
                </field>
                <field name="partner_id" position="replace">
                    <field name="partner_id" invisible="1"/>
                </field>
                
            </field>
        </record>
    </data>
</odoo>